@model ScrumProject.Models.Members
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteUser</h2>

<h3>Are you sure you want to remove user from project?</h3>
<fieldset>
    <legend>User</legend>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.User.Username)
    </div>

    <div class="display-label">Role</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Role)
    </div>
    @*<div class="display-label">projectId</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectId)
    </div>*@
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="DeleteUser" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
