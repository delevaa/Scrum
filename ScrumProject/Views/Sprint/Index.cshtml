@model IEnumerable<ScrumProject.Models.Sprint>

@{
    ViewBag.Title = "Index";
}

<h2>Sprints</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { projectId = ViewBag.projectId}, null)
</p>
<table>
    <tr>
        <th>
            DateFrom
        </th>
        <th>
            DateTo
        </th>
        <th>
            Velocity
        </th>
        <th>
            Status
        </th>
        <th>
            Project
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Velocity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<br />
<div>
    @Html.ActionLink("Back to Project", "Details", "Project", new { id = ViewBag.projectId },null)
</div>
